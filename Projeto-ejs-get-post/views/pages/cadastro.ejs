<%- include ('../partials/header.ejs') %>


<body id="body-cadastro">
    <%- include ('../partials/navbar.ejs') %>

    <div class='container' id="cadastro-cliente">

        <div class='card'>

            <div class='card-header'>
                <h3>Cadastro do Cliente</h3>
            </div>

            <div class='card-body'>
                <form method="POST" action="/cadastro">
                    <div class="form-group">
                        <label for="nome">Nome</label>
                        <input type="text" class="form-control" id="nome" name="nome" placeholder="Jose eraldo barbosa melo">
                    </div>
                    <div class="form-group">
                        <label for="idade">Idade</label>
                        <input type="number" class="form-control" id="idade" name="idade" placeholder="25">
                    </div>
                    <div class="form-group">
                        <label for="email">Email address</label>
                        <input type="email" class="form-control" id="email" name="email" placeholder="help@example.com.br">
                    </div>
                    <div class="form-group">
                        <label for="password">Password</label>
                        <input type="password" class="form-control" id="password" name ="password" placeholder="*********">
                    </div>
                    <button type="submit" class="btn btn-success">Submit</button>
                </form>
            </div>

        </div>

    </div>

</body>

<%- include ('../partials/footer.ejs') %>